<?xml version="1.0" encoding="utf-8"?>
<openerp>

        <template id="website_sale_wishlist.products_add_to_wishlist"
          inherit_id="website_sale.products_item"
          customize_show="True"
          name="Add to Wishlist From List Extend">
                <xpath expr="//form" position="before">

                    <t t-if="not website._compute_website_view()">
                         <t t-call="website_sale_wishlist.product_toggle">
                            <t t-set="extra_class" t-value="'btn-xs'"/>
                         </t>
                    </t>
                 </xpath>
                <!--<xpath expr="//*[@class='product_price']">-->
                <xpath expr="//form//section[@id='section_list']//div[@name='prod_qty_value_and_buttons']" position="before">
                    <t t-if="website._compute_website_view()">
                        <t t-call="website_sale_wishlist.product_toggle">
                            <t t-set="extra_class" t-value="'btn-xs'"/>
                        </t>
                    </t>
                </xpath>
        </template>




        <template id="product_toggle_extend"
          name="Add to Wishlist Widget Extend"
          inherit_id="website_sale_wishlist.product_toggle">
            <xpath expr="//button" position="attributes">
                <attribute name="t-att-style">'float: right;margin-top: 5px;margin-right:2%; z-index: 999;position: relative;' if not website._compute_website_view() else 'float: right;clear: both;'</attribute>
            </xpath>
        </template>

</openerp>
